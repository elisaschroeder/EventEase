@using Microsoft.AspNetCore.Components.Web
@using EventEase.Services
@inject IApplicationLogger Logger
@inject IJSRuntime JSRuntime

<div class="error-boundary-container">
    @if (HasError)
    {
        <div class="alert alert-danger" role="alert">
            <div class="error-boundary-header">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Something went wrong</strong>
            </div>
            
            @if (ShowDetails)
            {
                <div class="error-boundary-details mt-3">
                    <h6>Error Details:</h6>
                    <div class="error-boundary-message">
                        <code>@ErrorMessage</code>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(StackTrace) && IsDevelopment)
                    {
                        <div class="error-boundary-stack mt-2">
                            <h6>Stack Trace:</h6>
                            <pre class="error-boundary-stack-trace">@StackTrace</pre>
                        </div>
                    }
                </div>
            }
            
            <div class="error-boundary-actions mt-3">
                <button class="btn btn-outline-danger btn-sm me-2" @onclick="ToggleDetails">
                    <i class="fas @(ShowDetails ? "fa-eye-slash" : "fa-eye") me-1"></i>
                    @(ShowDetails ? "Hide" : "Show") Details
                </button>
                
                <button class="btn btn-primary btn-sm me-2" @onclick="Recover">
                    <i class="fas fa-redo me-1"></i>
                    Try Again
                </button>
                
                <button class="btn btn-secondary btn-sm" @onclick="ReportError">
                    <i class="fas fa-bug me-1"></i>
                    Report Issue
                </button>
            </div>
            
            @if (IsReporting)
            {
                <div class="error-boundary-reporting mt-3">
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Reporting...</span>
                    </div>
                    <span>Reporting error...</span>
                </div>
            }
        </div>
    }
    else
    {
        @ChildContent
    }
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsDevelopment { get; set; } = true;
    [Parameter] public EventCallback<Exception> OnError { get; set; }

    private bool HasError { get; set; }
    private bool ShowDetails { get; set; }
    private bool IsReporting { get; set; }
    private string ErrorMessage { get; set; } = string.Empty;
    private string StackTrace { get; set; } = string.Empty;
    private Exception? CurrentException { get; set; }
    private string ErrorId { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Set up global error handler
        AppDomain.CurrentDomain.UnhandledException += OnUnhandledException;
        TaskScheduler.UnobservedTaskException += OnUnobservedTaskException;
    }

    public async Task HandleErrorAsync(Exception exception)
    {
        try
        {
            ErrorId = Guid.NewGuid().ToString("N")[..8];
            CurrentException = exception;
            HasError = true;
            ErrorMessage = exception.Message;
            StackTrace = exception.StackTrace ?? "";

            // Log the error
            await Logger.LogErrorAsync(exception, 
                "Unhandled exception in ErrorBoundary (ID: {ErrorId}): {Message}", 
                ErrorId, exception.Message);

            // Notify parent component
            if (OnError.HasDelegate)
            {
                await OnError.InvokeAsync(exception);
            }

            StateHasChanged();
        }
        catch (Exception logException)
        {
            // Fallback error handling
            Console.WriteLine($"Error in ErrorBoundary.HandleErrorAsync: {logException.Message}");
        }
    }

    private async Task ToggleDetails()
    {
        ShowDetails = !ShowDetails;
        await Logger.LogUserActionAsync("ErrorBoundary.ToggleDetails", $"ShowDetails: {ShowDetails}, ErrorId: {ErrorId}");
    }

    private async Task Recover()
    {
        try
        {
            await Logger.LogUserActionAsync("ErrorBoundary.Recover", $"Attempting recovery from ErrorId: {ErrorId}");
            
            HasError = false;
            ShowDetails = false;
            ErrorMessage = string.Empty;
            StackTrace = string.Empty;
            CurrentException = null;
            ErrorId = string.Empty;
            
            StateHasChanged();
            
            await Logger.LogInformationAsync("ErrorBoundary recovery successful");
        }
        catch (Exception ex)
        {
            await Logger.LogErrorAsync(ex, "Error during ErrorBoundary recovery");
        }
    }

    private async Task ReportError()
    {
        if (IsReporting || CurrentException == null) return;

        try
        {
            IsReporting = true;
            StateHasChanged();

            await Logger.LogUserActionAsync("ErrorBoundary.ReportError", $"User reported error: {ErrorId}");

            // Simulate error reporting (in production, this would send to error tracking service)
            await Task.Delay(2000);

            // Show success message
            await JSRuntime.InvokeVoidAsync("alert", $"Error reported successfully. Reference ID: {ErrorId}");
            
            await Logger.LogInformationAsync("Error report submitted successfully for ErrorId: {ErrorId}", ErrorId);
        }
        catch (Exception ex)
        {
            await Logger.LogErrorAsync(ex, "Error submitting error report for ErrorId: {ErrorId}", ErrorId);
            await JSRuntime.InvokeVoidAsync("alert", "Failed to submit error report. Please try again later.");
        }
        finally
        {
            IsReporting = false;
            StateHasChanged();
        }
    }

    private async void OnUnhandledException(object sender, UnhandledExceptionEventArgs e)
    {
        if (e.ExceptionObject is Exception exception)
        {
            await HandleErrorAsync(exception);
        }
    }

    private async void OnUnobservedTaskException(object sender, UnobservedTaskExceptionEventArgs e)
    {
        await HandleErrorAsync(e.Exception);
        e.SetObserved(); // Prevent the application from terminating
    }

    public void Dispose()
    {
        AppDomain.CurrentDomain.UnhandledException -= OnUnhandledException;
        TaskScheduler.UnobservedTaskException -= OnUnobservedTaskException;
    }
}

