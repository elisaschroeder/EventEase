@page "/events/details/{eventId:int}"
@using EventEase.Services
@using EventEase.Models
@inject IEventService EventService
@inject NavigationManager Navigation

<PageTitle>@(eventItem?.Name ?? "Event Details") - EventEase</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading event details...</p>
    </div>
}
else if (eventItem == null)
{
    <div class="container">
        <div class="text-center py-5">
            <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
            <h2 class="mt-3">Event Not Found</h2>
            <p class="text-muted">The event you're looking for doesn't exist or has been removed.</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/events")'>
                <i class="bi bi-arrow-left me-1"></i>Back to Events
            </button>
        </div>
    </div>
}
else
{
    <div class="container">
        <!-- Back Navigation -->
        <div class="row mb-3">
            <div class="col-12">
                <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/events")'>
                    <i class="bi bi-arrow-left me-1"></i>Back to Events
                </button>
            </div>
        </div>

        <!-- Event Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <img src="@eventItem.ImageUrl" class="img-fluid rounded shadow" alt="@eventItem.Name" 
                     style="width: 100%; height: 300px; object-fit: cover;">
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <span class="badge bg-@GetEventTypeBadgeColor(eventItem.Type) fs-6">@eventItem.Type</span>
                            @if (eventItem.CurrentAttendees >= eventItem.MaxAttendees)
                            {
                                <span class="badge bg-danger fs-6 ms-1">Event Full</span>
                            }
                            else if (eventItem.CurrentAttendees >= eventItem.MaxAttendees * 0.8)
                            {
                                <span class="badge bg-warning fs-6 ms-1">Almost Full</span>
                            }
                        </div>
                        
                        <h2 class="card-title">@eventItem.Name</h2>
                        
                        <div class="mb-3">
                            <h4 class="text-primary">$@eventItem.Price</h4>
                            <small class="text-muted">per person</small>
                        </div>

                        <div class="mb-3">
                            <p class="mb-1">
                                <i class="bi bi-calendar me-2"></i>
                                <strong>@eventItem.Date.ToString("MMMM dd, yyyy")</strong>
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-clock me-2"></i>
                                @eventItem.Date.ToString("h:mm tt")
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-geo-alt me-2"></i>
                                @eventItem.Location
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-building me-2"></i>
                                @eventItem.Organizer
                            </p>
                            <p class="mb-3">
                                <i class="bi bi-people me-2"></i>
                                @eventItem.CurrentAttendees / @eventItem.MaxAttendees attendees
                            </p>
                        </div>

                        <!-- Availability Bar -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Availability</small>
                                <small>@(eventItem.MaxAttendees - eventItem.CurrentAttendees) spots left</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @(GetAvailabilityBarColor())" role="progressbar" 
                                     style="width: @(GetAttendancePercentage())%" 
                                     aria-valuenow="@eventItem.CurrentAttendees" 
                                     aria-valuemin="0" 
                                     aria-valuemax="@eventItem.MaxAttendees">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            @if (eventItem.CurrentAttendees >= eventItem.MaxAttendees)
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="bi bi-x-circle me-1"></i>Event Full
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-lg" @onclick="() => showRegistrationForm = true">
                                    <i class="bi bi-person-plus me-1"></i>Register Now
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Event Details -->
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">About This Event</h3>
                        <p class="card-text">@eventItem.Description</p>
                        
                        @if (eventItem.Tags.Any())
                        {
                            <div class="mt-3">
                                <h5>Tags</h5>
                                @foreach (var tag in eventItem.Tags)
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">#@tag</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Event Details</h5>
                        <dl class="row">
                            <dt class="col-sm-6">Date:</dt>
                            <dd class="col-sm-6">@eventItem.Date.ToString("MMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-6">Time:</dt>
                            <dd class="col-sm-6">@eventItem.Date.ToString("h:mm tt")</dd>
                            
                            <dt class="col-sm-6">Duration:</dt>
                            <dd class="col-sm-6">4 hours</dd>
                            
                            <dt class="col-sm-6">Category:</dt>
                            <dd class="col-sm-6">@eventItem.Type</dd>
                            
                            <dt class="col-sm-6">Organizer:</dt>
                            <dd class="col-sm-6">@eventItem.Organizer</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Registration Modal -->
    @if (showRegistrationForm)
    {
        <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Register for @eventItem.Name</h5>
                        <button type="button" class="btn-close" @onclick="() => showRegistrationForm = false"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(registrationMessage))
                        {
                            <div class="alert @(isRegistrationSuccess ? "alert-success" : "alert-danger")" role="alert">
                                @registrationMessage
                            </div>
                        }

                        @if (!isRegistrationSuccess)
                        {
                            <EditForm Model="registration" OnValidSubmit="HandleRegistration">
                                <DataAnnotationsValidator />
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName" class="form-label">First Name *</label>
                                        <InputText id="firstName" class="form-control" @bind-Value="registration.AttendeeFirstName" />
                                        <ValidationMessage For="() => registration.AttendeeFirstName" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName" class="form-label">Last Name *</label>
                                        <InputText id="lastName" class="form-control" @bind-Value="registration.AttendeeLastName" />
                                        <ValidationMessage For="() => registration.AttendeeLastName" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">Email Address *</label>
                                        <InputText id="email" type="email" class="form-control" @bind-Value="registration.AttendeeEmail" />
                                        <ValidationMessage For="() => registration.AttendeeEmail" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="phone" class="form-label">Phone Number</label>
                                        <InputText id="phone" class="form-control" @bind-Value="registration.AttendeePhone" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="company" class="form-label">Company</label>
                                        <InputText id="company" class="form-control" @bind-Value="registration.Company" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="position" class="form-label">Position</label>
                                        <InputText id="position" class="form-control" @bind-Value="registration.Position" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="specialRequests" class="form-label">Special Requests or Dietary Restrictions</label>
                                    <InputTextArea id="specialRequests" class="form-control" rows="3" @bind-Value="registration.SpecialRequests" />
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" @onclick="() => showRegistrationForm = false">Cancel</button>
                                    <button type="submit" class="btn btn-primary" disabled="@isRegistering">
                                        @if (isRegistering)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            <span>Registering...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-1"></i>
                                            <span>Register ($@eventItem.Price)</span>
                                        }
                                    </button>
                                </div>
                            </EditForm>
                        }
                        else
                        {
                            <div class="text-center">
                                <i class="bi bi-check-circle display-4 text-success"></i>
                                <p class="mt-3">You will receive a confirmation email shortly with event details and next steps.</p>
                                <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/events")'>
                                    Browse More Events
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter] public int EventId { get; set; }
    
    private Event? eventItem;
    private bool isLoading = true;
    private bool showRegistrationForm = false;
    private bool isRegistering = false;
    private bool isRegistrationSuccess = false;
    private string registrationMessage = string.Empty;
    
    private Registration registration = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Validate EventId parameter
            if (EventId <= 0)
            {
                // Invalid event ID, redirect to 404
                Navigation.NavigateTo("/notfound", true);
                return;
            }

            eventItem = await EventService.GetEventByIdAsync(EventId);
            
            // If event not found, it will be null and the UI will show the "Event Not Found" section
            if (eventItem != null)
            {
                registration.EventId = EventId;
            }
        }
        catch (Exception)
        {
            // On any error, show the event not found section
            eventItem = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleRegistration()
    {
        isRegistering = true;
        registrationMessage = string.Empty;
        
        try
        {
            var success = await EventService.RegisterForEventAsync(registration);
            
            if (success)
            {
                isRegistrationSuccess = true;
                registrationMessage = "Registration successful! Thank you for registering.";
                // Refresh event data to update attendee count
                eventItem = await EventService.GetEventByIdAsync(EventId);
            }
            else
            {
                registrationMessage = "Registration failed. The event may be full or there was an error processing your request.";
            }
        }
        catch (Exception)
        {
            registrationMessage = "An error occurred during registration. Please try again.";
        }
        finally
        {
            isRegistering = false;
        }
    }

    private string GetEventTypeBadgeColor(EventType eventType)
    {
        return eventType switch
        {
            EventType.Corporate => "primary",
            EventType.Social => "success",
            EventType.Conference => "info",
            EventType.Workshop => "warning",
            EventType.Networking => "secondary",
            EventType.Gala => "danger",
            EventType.TeamBuilding => "dark",
            EventType.Wedding => "light",
            _ => "secondary"
        };
    }

    private double GetAttendancePercentage()
    {
        if (eventItem == null || eventItem.MaxAttendees == 0)
            return 0;
        
        return (double)eventItem.CurrentAttendees / eventItem.MaxAttendees * 100;
    }

    private string GetAvailabilityBarColor()
    {
        var percentage = GetAttendancePercentage();
        return percentage switch
        {
            >= 90 => "bg-danger",
            >= 70 => "bg-warning",
            _ => "bg-success"
        };
    }
}