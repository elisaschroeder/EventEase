{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "EventEase": "Information"
    }
  },
  "Application": {
    "Name": "EventEase Attendance Tracker",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "Features": {
    "EnableSampleData": false,
    "EnableDiagnostics": false,
    "MaxAttendeesPerEvent": 5000,
    "ReportRetentionDays": 2555
  },
  "Performance": {
    "CacheTimeoutMinutes": 60,
    "MaxConcurrentOperations": 50,
    "DatabaseTimeoutSeconds": 15
  },
  "Security": {
    "RequireAuthentication": true,
    "EnableAuditLogging": true,
    "SessionTimeoutMinutes": 30
  },
  "Database": {
    "ConnectionString": "#{DATABASE_CONNECTION_STRING}#",
    "CommandTimeoutSeconds": 30,
    "EnableRetry": true,
    "MaxRetryAttempts": 3
  },
  "Monitoring": {
    "ApplicationInsightsKey": "#{APPINSIGHTS_INSTRUMENTATIONKEY}#",
    "EnableHealthChecks": true,
    "HealthCheckIntervalSeconds": 30
  }
}