<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventEase</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events">
                <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Browse Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events-paginated">
                <span class="bi bi-list-nav-menu" aria-hidden="true"></span> Events (Paginated)
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events/corporate">
                <span class="bi bi-building-nav-menu" aria-hidden="true"></span> Corporate Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events/social">
                <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Social Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="attendance">
                <span class="bi bi-clipboard-check-nav-menu" aria-hidden="true"></span> Attendance Tracker
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="attendance/reports">
                <span class="bi bi-bar-chart-nav-menu" aria-hidden="true"></span> Attendance Reports
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="session-dashboard">
                <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Session Dashboard
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
